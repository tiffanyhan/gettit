<%= render 'shared/content_title', title: 'Create a new category' %>

<%= render 'shared/errors', obj: @category %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <%= submit_tag 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>